<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_pitch_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity" >

        	
        <TextView
            android:id="@+id/textViewResultHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/header_text_size"
            android:text="@string/title_activity_results" />
        
        <TextView
            android:id="@+id/textViewResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/base_text_size"
            android:textColor="#1261CE"
            android:layout_below="@+id/textViewResultHeader"/>
        
        <Button
        	android:id="@+id/buttonGoHome"
        	style="@style/HomeScreenButtonStyle"
        	android:background="@drawable/red_rr_normal"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/textViewResults"
        	android:layout_marginTop="@dimen/default_padding"
        	android:layout_centerHorizontal="true"       
        	android:text="@string/go_back_to_home"
        	android:textSize="@dimen/button_text_size"
        	android:textColor="#FFFFFF"
        	android:gravity="center" />



   
</RelativeLayout>
